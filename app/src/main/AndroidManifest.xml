<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polsri.pedas">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_pedas_round"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_logo_pedas_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PemantauDAS">

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.PemantauDAS.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PemantauDAS.NoActionBar"/>
        <activity
            android:name=".OnlineActivity"
            android:exported="true"
            android:theme="@style/Theme.PemantauDAS.NoActionBar"/>
        <activity
            android:name=".OfflineActivity"
            android:exported="true"
            android:theme="@style/Theme.PemantauDAS.NoActionBar"/>
    </application>

</manifest>